<% item = @item %>
<li>
  <label>商品名称：</label>
  <select name="package_itemable_id" id="store_material_id" style="width: 250px;">
    <option>请选择</option>
    <% Mis.materials.each (m) ->: %>
    <option value="<%= m.get 'id' %>" <%= 'selected' if (String(item.get('package_itemable_id')) == String(m.get 'id') && item.isStoreMaterial())  %>><%= m.get 'name' %></option>
  <% end %>
  </select>
</li>

<li>
  <label>名称：</label>
  <span id="materialName"><%= item.name('StoreMaterial') %></span>
</li>

<li>
  <label>零售单价：</label>
  <span id="materialPrice"><%= item.retail_price('StoreMaterial') %></span>
  <label>零售总价：</label>
  <span class='js-regular-amount color-282726'></span>
</li>

<li>
  <label>数量：</label>
  <input name="quantity" type="text" value="<%= item.quantity('StoreMaterial') %>"> 件
</li>

<li>
  <label>套餐总价：</label>
  <input name="amount" type="text" value="<%= item.packagedItemAmount('StoreMaterial') %>"> 元
</li>

<li>
  <label>套餐单价：</label>
  <input name="price" type="text" value="<%= item.price('StoreMaterial') %>" readonly> 元
  <label>单品折扣率：</label>
  <span class='js-discount-rate'></span>
</li>
