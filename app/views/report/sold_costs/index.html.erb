<div class="main_top">
  <%= breadcrumb_navigation(['报表', '销售成本明细']) %>
</div>
<div class="details">
    <div class="list_table">
      <div class="details_nav"></div>
      <table cellpadding="0" cellspacing="0" class="index_list">
        <thead>
          <tr>
            <th>序号</th>
            <th>会计期间</th>
            <th>日期</th>
            <th>业务单号</th>
            <th>摘要</th>
            <th>出库单号</th>
            <th>客户名称</th>
            <th>商品名称</th>
            <th>规格</th>
            <th>单位</th>
            <th>销售数量</th>
            <th>单位成本</th>
            <th>销售成本</th>
          </tr>
        </thead>
        <tbody>
          <% @outing_items.each_with_index do |item, idx| %>
          <tr>
            <td><%= idx + 1 %></td>
            <td><%= item.created_at.strftime("%Y-%m") %></td>
            <td><%= item.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
            <td><%= item.outingable_item.store_order.numero %></td>
            <td><%= item.store_material_outing.remark %></td>
            <td><%= item.store_material_outing.numero %></td>
            <td><%= item.outingable_item.store_order.store_customer.full_name%></td>
            <td><%= item.store_material.name %></td>
            <td><%= item.store_material.speci %></td>
            <td><%= item.store_material.store_material_unit.name %></td>
            <td><%= item.quantity %></td>
            <td><%= item.cost_price %></td>
            <td><%= item.inventory_cost_price %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>
