<div class="main_top">
  <%= breadcrumb_navigation(['报表', '商品采购明细']) %>
</div>
<div class="details">
    <div class="list_table">
      <div class="details_nav"></div>
      <table cellpadding="0" cellspacing="0" class="index_list">
        <thead>
          <tr>
            <th>序号</th>
            <th>单号</th>
            <th>商品条码</th>
            <th>商品名称</th>
            <th>品牌</th>
            <th>规格</th>
            <th>单位</th>
            <th>商品备注</th>
            <th>采购单价</th>
            <th>采购数量</th>
            <th>供应商名称</th>
            <th>开单日期</th>
            <th>是否入库</th>
            <th>摘要</th>
          </tr>
        </thead>
        <tbody>
          <% @material_order_items.each_with_index do |item, idx| %>
          <tr>
            <td><%= idx + 1 %></td>
            <td><%= item.store_material_order.numero %></td>
            <td><%= item.store_material.barcode %></td>
            <td><%= item.store_material.name %></td>
            <td><%= item.store_material.store_material_brand.name %></td>
            <td><%= item.store_material.speci %></td>
            <td><%= item.store_material.store_material_unit.name%></td>
            <td><%= item.store_material.remark %></td>
            <td><%= item.price %></td>
            <td><%= item.quantity%></td>
            <td><%= item.store_material_order.store_supplier.name %></td>
            <td><%= item.store_material_order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
            <td><%= item.is_incomes? %></td>
            <td><%= item.store_material_order.remark%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>
