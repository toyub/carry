
<div class="main_top">
  <%= breadcrumb_navigation(['报表', '采购付款明细表']) %>
</div>
<div class="details">
    <div class="list_table">
      <div class="details_nav"></div>
      <table cellpadding="0" cellspacing="0" class="index_list">
        <thead>
          <tr>
            <th>序号</th>
            <th>单号</th>
            <th>客户名称</th>
            <th>车牌号</th>
            <th>车型</th>
            <th>开单日期</th>
            <th>金额总计</th>
            <th>优惠</th>
            <th>实收金额</th>
            <th>商品金额</th>
            <th>服务金额</th>
            <th>套餐金额</th>
            <th>成本</th>
            <th>毛利</th>
            <th>开单员</th>
            <th>备注</th>
          </tr>
        </thead>
        <tbody>
          <% @store_orders.each_with_index do |order, idx| %>
          <tr>
            <td><%= idx + 1 %></td>
            <td><%= order.numero%></td>
            <td><%= order.store_customer.full_name %></td>
            <td><%= order.store_vehicle.license_number %></td>
            <td><%= order.store_vehicle.vehicle_model.try :name %></td>
            <td><%= order.created_at.strftime("%Y-%m-%d") %></td>
            <td><%= order.total_retail_price %></td>
            <td><%= order.discount_total %></td>
            <td><%= order.amount %></td>
            <td><%= order.material_amount %></td>
            <td><%= order.service_amount %></td>
            <td><%= order.package_amount %></td>
            <td><%= order.total_cost_price %></td>
            <td><%= order.amount - order.total_cost_price %></td>
            <td><%= order.creator.full_name %></td>
            <td><%= order.remark %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>
