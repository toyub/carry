<div class="main_top">
  <%= breadcrumb_navigation(['报表', '应收款汇总']) %>
</div>


  <div class="details">
    <div class="list_table">
      <div>
        <table cellpadding="0" cellspacing="0" class="storage_tab" id="storage_tab">
          <thead>
            <tr class="bg-color-e0e2cf color-282726">
              <th>#</th>
              <th>核算对象名称</th>
              <th>期间</th>
              <th>期初余额</th>
              <th>本期应收</th>
              <th>本期实收</th>
              <th>本年累计应收</th>
              <th>本年累计实收</th>
              <th>期末余额</th>
            </tr>
          </thead>
          <tbody>
            <% @receivable_reports.each_with_index do |report, idx| %>
            <tr>
              <td class="number"><%= idx + 1 %></td>
              <td><%= report.object_name %></td>
              <td><%= report.created_month %></td>
              <td><%= report.openings["balance"] %></td>
              <td><%= report.accruals["current_receivable"] %></td>
              <td><%= report.accruals["current_received"] %></td>
              <td><%= report.closings["receivable"] %></td>
              <td><%= report.closings["received"] %></td>
              <td><%= report.closings["balance"] %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
