<div class="main_top">
  <%= breadcrumb_navigation(['报表', '销售毛利润汇总']) %>
</div>
<div class="details">
    <div class="list_table">
      <div class="details_nav"></div>
      <table cellpadding="0" cellspacing="0" class="index_list">
        <thead>
          <tr>
            <th>序号</th>
            <th>会计期间</th>
            <th>商品名称</th>
            <th>一级分类</th>
            <th>二级分类</th>
            <th>销售数量</th>
            <th>销售单价</th>
            <th>销售收入</th>
            <th>出库数量</th>
            <th>单位成本</th>
            <th>销售成本</th>
            <th>销售毛利</th>
            <th>销售毛利率</th>
          </tr>
        </thead>
        <tbody>
          <% @outing_items.each_with_index do |item, idx| %>
          <tr>
            <td><%= idx + 1 %></td>
            <td><%= item.created_at.strftime("%Y-%m") %></td>
            <td><%= item.store_material.name %></td>
            <td><%= item.store_material.store_material_root_category.name %></td>
            <td><%= item.store_material.store_material_category.name %></td>
            <td><%= item.outingable_item.quantity %></td>
            <td><%= item.outingable_item.price %></td>
            <td><%= item.outingable_item.amount %></td>
            <td><%= '出库数量' %></td>
            <td><%= item.cost_price %></td>
            <td><%= item.outingable_item.cost_price %></td>
            <td><%= item.outingable_item.amount - (item.outingable_item.cost_price.to_f * item.outingable_item.quantity) %></td>
            <td><%= item.gross_profit_rate.to_s + "%" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>
