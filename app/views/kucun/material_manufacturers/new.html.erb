<div style="width:220px;margin:auto;">
  <%= form_for(@material_manufacturer, url: kucun_material_manufacturers_path) do |form|%>
    <%= form.text_field :name, placeholder: '请输入工厂名称', required: true %>
    <%= form.submit value: '保存' %>
  <% end %>
</div>

<% content_for :javascripts do %>
  <script>
  jQuery(function($){
    $('#new_store_material_manufacturer').on('submit', function(){
      $(this).ajaxSubmit(function(data, status, xhr){
        if(window.top != window.self){
          window.top.$$MIS.methods.get('add_manufacturer_callback').apply(data)
        }
      });
      return false;
    })
  });
  </script>
<% end %>
