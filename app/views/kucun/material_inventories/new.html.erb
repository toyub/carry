            </table>
            <div class="common_storage_account">
              <div class="item_content margin-left-10" >
                <label class="width-75">备注：</label>
                <textarea class="remarks_textarea"></textarea>
              </div>
              <div class="item_content  margin-left-10">
                <label class="width-75">制单人：</label>
