
<div class="main_top">
  <%= breadcrumb_navigation(['库存', '商品', '出库记录']) %>
</div>
<div class="details">
    <div class="list_table">
      <div class="details_nav"><%= render partial: 'kucun/materials/material_settings_url' %></div>
      <table cellpadding="0" cellspacing="0" class="index_list">
        <thead>
          <tr>
            <th style="border-right:0px;" ></th>
            <th>出库时间</th>
            <th>商品名称</th>
            <th>商品条形码</th>
            <th>一级分类</th>
            <th>二级分类</th>
            <th>规格</th>
            <th>单位</th>
            <th>成本价</th>
            <th>出库数量</th>
            <th>小计</th>
            <th>出库类型</th>
            <th>领用人</th>
            <th>操作人</th>
          </tr>
        </thead>
        <tbody>
          <% @outgo_records.each_with_index do |record, idx| %>
          <tr>
            <td><%= idx + 1 %></td>
            <td><%= record.logged_item.created_at.to_s(:date_only) %></td>
            <td title="<%= record.logged_item.store_material.name %>"><%= record.logged_item.store_material.name.to_s.truncate(11) %></td>
            <td><%= record.logged_item.store_material.barcode %></td>
            <td><%= record.logged_item.store_material.store_material_root_category.name %></td>
            <td><%= record.logged_item.store_material.store_material_category.name %></td>
            <td><%= record.logged_item.store_material.speci %></td>
            <td><%= record.logged_item.store_material.store_material_unit.name %></td>
            <td class="text-align-right"><%= record.logged_item.store_material.cost_price %></td>
            <td><%= record.logged_item.quantity -%></td>
            <td class="text-align-right"><%= record.logged_item.amount %></td>
            <td><%= record.logged_item.outing_type.name %></td>
            <td class="text-align-right"><%= record.logged_item.requester.try(:screen_name) -%></td>
            <td><%= record.logged_item.creator.screen_name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>
