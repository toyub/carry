<div class="content" id="content">
      <div class="main_top">
  <h2>库存 &gt;商品 &gt;入库记录</h2>
</div>

<div class="details">
  <div class="details_nav"><%= render partial: 'kucun/materials/material_settings_url' %></div>
  <div class="list_table">
    <div id="all_in_stock">
      <table cellpadding="0" cellspacing="0" class="storage_tab" id="storage_tab">
        <thead>
          <tr class="bg-color-e0e2cf color-282726">
            <th>#</th>
            <th>入库时间</th>
            <th>入库单号</th>
            <th>商品名称</th>
            <th>条码</th>
            <th>一级分类</th>
            <th>二级分类</th>
            <th>规格</th>
            <th>单位</th>
            <th>成本价</th>
            <th>数量</th>
            <th>小计</th>
            <th>仓库</th>
            <th>备注</th>
            <th>操作人</th>
          </tr>
        </thead>
        <tbody>
          <% @income_records.each_with_index do |record, idx| %>
          <tr>
            <td class="number"><%= idx + 1 %></td>
            <td><%= record.logged_item.created_at.to_s(:date_with_short_time) %></td>
            <td><%= record.logged_item.numero %></td>
            <td title="<%= record.logged_item.store_material.name %>"><%= record.logged_item.store_material.name.truncate(8) %></td>
            <td><%= record.logged_item.store_material.barcode %></td>
            <td><%= record.logged_item.store_material.store_material_root_category.try :name %></td>
            <td><%= record.logged_item.store_material.store_material_category.try :name %></td>
            <td><%= record.logged_item.store_material.speci %></td>
            <td><%= record.logged_item.store_material.store_material_unit.try :name %></td>
            <td><%= record.logged_item.price %></td>
            <td><%= record.logged_item.quantity %></td>
            <td><%= record.logged_item.amount %></td>
            <td><%= record.logged_item.store_depot.name %></td>
            <td><%= record.logged_item.remark %></td>
            <td><%= record.logged_item.store_staff.screen_name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

    </div>
