<tr>
    <td colspan="2">
      <fieldset class="width-490 margin-left-26">
        <legend class="margin-left-10">
          <input type="checkbox" name="saleinfo[divide_to_retail]">
          <label>此商品拆分销售</label>
        </legend>

        <div class="float-left">
          <label class="width-75">总量</label>
          <input type="text" num un min=0 name='saleinfo[divide_total_volume]' class="width-160" required="true">
        </div>
        <div class="float-left">
          <label class="width-75">拆分单位</label>
          <select class="width-160" name='saleinfo[divide_unit_type_id]' required="true">
            <option>请选择</option>
            <option value="0">米</option>
            <option value="1">平方米</option>
            <option value="2">升</option>
          </select>
        </div>
        <div class="float-left">
          <label class="width-75">单次用量</label>
          <input type="text" num un min=0 name='saleinfo[divide_volume_per_bill]' class="width-100" required="true">
          <span id='divide_unit' class="display-inline-block width-57">平方米</span>
        </div>

        <div class="float-left">
          <label class="width-75">零售价</label>
          <input type="text" num un name='saleinfo[retail_price]' class="width-160" required="true">
        </div>

        <div class="float-left">
          <span class="width-75 display-inline-block text-align-right">
            <input type="checkbox" name="saleinfo[bargainable]"  class="toggleable width-13">
            优惠价
          </span>
          <input type="text" num un name='saleinfo[bargain_price]' class="width-160" required="true">
        </div>

        <div class="float-left">
          <span class="width-75 display-inline-block text-align-right">
            <input type="checkbox" name="saleinfo[vip_price_enabled]" class="toggleable width-13">
            会员价
          </span>
          <input type="text" num un name='saleinfo[vip_price]' class="width-160"  required="true">
        </div>

        <div class="float-left">
          <label class="width-75">批发价</label>
          <input type="text" num un name='saleinfo[trade_price]' class="width-160">
        </div>
      </fieldset>
    </td>
  </tr>