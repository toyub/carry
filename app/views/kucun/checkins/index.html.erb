<div class="main_top">
  <%= breadcrumb_navigation(['库存', '入库', '按商品入库', '记录']) %>
</div>


  <div class="details">
    <div class="list_table">
      <div class="search_nav">
        <%= render partial: 'kucun/partials/ruku_search' %>
        <div class="query_div">
          <a class="in_stg_btn btn" href="/kucun/checkins/new">入库</a>
          <a class="notes_btn btn" href="javascript:void(0);">记录
          </a>
        </div>
      </div>
      <div>
        <table cellpadding="0" cellspacing="0" class="storage_tab" id="storage_tab">
          <thead>
            <tr class="bg-color-e0e2cf color-282726">
              <th>#</th>
              <th>入库时间</th>
              <th>入库单号</th>
              <th>商品名称</th>
              <th>条码</th>
              <th>一级分类</th>
              <th>二级分类</th>
              <th>规格</th>
              <th>单位</th>
              <th>成本价</th>
              <th>数量</th>
              <th>小计</th>
              <th>仓库</th>
              <th>备注</th>
              <th>操作人</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each_with_index do |item, idx| %>
            <tr>
              <td class="number"><%= idx + 1 %></td>
              <td><%= item.created_at.to_s(:date_with_short_time) %></td>
              <td><%= item.store_material_checkin.numero %></td>
              <td title="<%= item.store_material.name %>"><%= item.store_material.name.truncate(8) %></td>
              <td><%= item.store_material.barcode %></td>
              <td><%= item.store_material.store_material_root_category.try :name %></td>
              <td><%= item.store_material.store_material_category.try :name %></td>
              <td><%= item.store_material.speci %></td>
              <td><%= item.store_material.store_material_unit.try :name %></td>
              <td><%= item.price %></td>
              <td><%= item.quantity %></td>
              <td><%= item.amount %></td>
              <td><%= item.store_depot.name %></td>
              <td><%= item.remark %></td>
              <td><%= item.store_staff.screen_name %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
