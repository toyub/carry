<div class="details_content salary_adjusting_record">

  <table class="record">
    <thead>
      <tr>
        <th>日期</th>
        <th>事件性质</th>
        <th>原底薪</th>
        <th>调薪幅度</th>
        <th>摘要</th>
        <th>
          <label class="cursor-pointer width-100">正式底薪<i class="fa fa-sort-down"></i></label>
        </th>
        <th>查看</th>
      </tr>
    </thead>

    <tbody>
      <% @record.each do |adjust| %>
        <tr>
          <td><%= adjust.created_at.strftime("%Y/%m/%d") %></td>
          <td>调薪</td>
          <td><%= adjust.previous_salary %></td>
          <td><%= adjust.new_salary - (adjust.previous_salary || 0) %>元</td>
          <td><%= adjust.reason %></td>
          <td><%= adjust.new_salary %></td>
          <td><a href="#">详情</a></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="7"></td>
      </tr>
    </tfoot>
  </table>
</div>
