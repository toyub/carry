<% content_for :pre_assets do %>
  <%= stylesheet_link_tag "/stylesheets/kehu.css" %>
<% end %>
<%= render '/crm/common/page_head' %>

<div class="details">

<%= render 'crm/common/customer_nav' %>

  <div class="details_content">
    <div class="panel_tab">
      <ul class="tab_items">
        <li><a href="javascript:void(0)" class="width-90 active tab_item">未清挂账</a></li>
        <li><a href="yiqing.html" class="width-90 tab_item">已清挂账</a></li>
        <li><a href="all.html" class="width-90 tab_item">所有挂账</a></li>
      </ul>
    </div>

    <div class="content customer_account">
      <div class="panel_query">
        <%= search_form_for @q , url: crm_store_customer_store_repayments_path(@customer) do  -%>
        <div class="query_item margin-right-30">
          <label class="margin-right-10">订单号</label>
          <input type="text" class="width-195 height-29" name="q[store_order_numero_cont]">
        </div>

        <div class="query_item margin-right-10">
          <label class="margin-right-10">下单时间</label>
          <input type="date" class="width-194 height-25" name="q[store_order_created_at_cont]" >
        </div>

        <div class="query_item">
          <input type="button" class="btn button_query width-86 height-29" value="查询">
        </div>

        <div class="query_item float-right">
          <label class="margin-right-10">回款合计</label>
          <input type="text" class="height-29 margin-right-10" value="1,080.00">
          <input type="button" class="btn button_confirm width-86 height-29" value="确认回款">
        </div>
        <% end %>
      </div>

      <div class="orders">
        <div class="order_item slide_up">
          <div class="abstract">
            <input type="checkbox">
            <span class="item_control width-260  margin-left-19">订单号：201412231000087</span>
            <span class="item_control width-200">下单时间：2015.12.22</span>
            <span class="item_control width-200">下单人：张三丰</span>
            <span class="item_control width-200">订单金额：7,320.00</span>
            <span class="item_control width-320">挂账余额：9,070.00</span>
            <i class="fa fa-chevron-down cursor-pointer js-slide-down"></i>
            <i class="fa fa-chevron-up cursor-pointer js-slide-up"></i>
          </div>

          <table class="detail">
            <thead>
              <tr>
                <th>项目&amp;产品</th>
                <th>单价</th>
                <th>数量</th>
                <th>优惠</th>
                <th>小计</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>洗车</td>
                <td>50.00</td>
                <td>1</td>
                <td>10</td>
                <td>40</td>
              </tr>
              <tr>
                <td>洗车</td>
                <td>50.00</td>
                <td>1</td>
                <td>10</td>
                <td>40</td>
              </tr>
            </tbody>
          </table>
        </div>


      </div>

      <p class="btn_group text-align-center">
        <a href="javascript:void(0)" class="font-14 fa fa-arrow-down show_more">点击加载更多</a>
      </p>
    </div>
  </div>
</div>

<script type="text/javascript" src="/mis/js/kehu/zhanghu.js"></script>

      </div>
