<% content_for :pre_assets do %>
  <%= stylesheet_link_tag "/stylesheets/kehu.css" %>
  <%= javascript_include_tag 'crm' %>
<% end %>

<%= render '/crm/common/page_head' %>
<div class="details">
<%= render 'crm/common/customer_nav' %>
  <div class="details_content">
    <div class="panel_tab">
      <%= render 'repayment_nav' %>
    </div>
    <%= notice %>
    <div class="content customer_account">
      <input type="hidden" id="action" value="<%= @action%>">
      <div class="panel_query">
        <%= search_form_for @q , url: finished_crm_store_customer_store_repayments_path(@customer), class: 'float-left' do  -%>
          <%= render 'search_form' %>
        <% end %>
      </div>
      <div class="orders">
        <%= render 'order_info' %>
      </div>
      <%= render 'link_more_info' %>
    </div>
  </div>

</div>
