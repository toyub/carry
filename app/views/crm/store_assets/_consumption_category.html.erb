<div class="capital_wrap">
  <div class="captical deposit captival_active" data-target="deposit">
    <ul>
      <li>储值账户</li>
      <li><%= @deposit_card_items.count %>
      <%= link_to "查看", crm_store_customer_store_asset_path(
        store_customer_id: @customer.id,
        id: 0,
        partial: "deposit"),
        remote: true, class: "show_btn btn"%>
      </li>
    </ul>
    <% @deposit_card_items.each do |item| %>
      <dl>
        <dd><span>充</span></dd>
        <dd><%= item.assetable.name %></dd>
      </dl>
    <% end %>
  </div>

  <div class="captical package" data-target="package">
    <ul>
      <li>套餐组合</li>
      <li><%= @packaged_services.count %></li>
    </ul>
    <% @packaged_services.each do |package| %>
      <dl>
        <dd><span>套</span></dd>
        <dd><%= package.id %></dd>
        <dd>
          <%= link_to "查看", crm_store_customer_store_asset_path(
            store_customer_id: @customer.id,
            id: package.id,
            class_name: "StoreCustomerPackagedService",
            partial: 'package'),
            remote: true, class: "show_btn btn" %>
        </dd>
      </dl>
    <% end %>
  </div>

  <div class="captical commodity" data-target="commodity">
    <ul>
      <li>商品组合</li>
      <li><%= @taozhuangs.count %></li>
    </ul>
    <% @taozhuangs.each do |taozhuang| %>
      <dl>
        <dd><span>套</span></dd>
        <dd><%= taozhuang.id %></dd>
        <dd>
          <%= link_to "查看", crm_store_customer_store_asset_path(
            store_customer_id: @customer.id,
            id: taozhuang.id,
            class_name: 'StoreCustomerTaozhuang',
            partial: "package"),
            remote: true, class: "show_btn btn" %>
        </dd>
      </dl>
    <% end %>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
  jQuery(function(){
    $("dd > a, li > a").on("click", function(){
      var captical = $(this).parents(".captical");
      captical.addClass("captival_active").siblings(".captical").removeClass("captival_active");
    })
  })
</script>
