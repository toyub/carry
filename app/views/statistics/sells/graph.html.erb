<div class="page_head main_top">
  <span class="font-18 margin-right-15">销售分析</span>

  <select class="width-90" onchange="self.location.pathname=options[selectedIndex].value">
    <option value="/mis/sas/xiaoshou/index.html">报表</option>
    <option value="/mis/sas/xiaoshou/graph.html" selected>图形分析</option>
  </select>
  <a class="back_to_list" href="index.html">
    <i class="fa-arrow-circle-left  fa" ></i>
    返回列表
  </a>

</div>

<div class="details sales_analysis">

  <div class="abstrct">
    <div class="material_sales">
      <div class="image">
        <i class="fa fa-shopping-cart"></i>
      </div>

      <ul>
        <li>商品销售</li>
        <li>23,789.00</li>
        <li>本月</li>
        <li class="position-relative">
          <span>35%</span>
          <i class="fa fa-long-arrow-down"></i>
        </li>
      </ul>
    </div>


    <div class="service_sales">
      <div class="image">
        <i class="fa fa-car"></i>
      </div>

      <ul>
        <li>服务销售</li>
        <li>23,789.00</li>
        <li>本月</li>
        <li class="position-relative">
          <span>35%</span>
          <i class="fa fa-long-arrow-down"></i>
        </li>
      </ul>
    </div>


    <div class="package_sales">
      <div class="image">
        <i class="fa fa-credit-card"></i>
      </div>

      <ul>
        <li>套餐销售</li>
        <li>23,789.00</li>
        <li>本月</li>
        <li class="position-relative">
          <span>35%</span>
          <i class="fa fa-long-arrow-down"></i>
        </li>
      </ul>
    </div>

  </div>



  <div class="details_content">

    <div class="graphs">

      <div class="bar_chart">
        <select class="width-90">
          <option value="half_year">半年图</option>
          <option value="year_on_year">同比图</option>
        </select>

        <div id="half_year_barchart" class="half_year_barchart"  style="height:320px;width:720px;"></div>
        <div id="year_on_year_barchart" class="year_on_year_barchart"  style="height:320px;width:720px;"></div>
      </div>

      <div class="pie_chart">
        <div id="payment_piechart" class="payment_piechart"  style="height:300px;width:320px;"></div>
        <div id="sales_piechart" class="sales_piechart"  style="height:300px;width:320px;"></div>
      </div>
    </div>

    <div class="personal_achivement">
      <div class="left">
        <select class="width-100">
          <option>全部</option>
        </select>

        <ul class="achives_top">
          <li>业绩 TOP</li>
          <li>李莉莉</li>
          <li>233单</li>
          <li>9,786.00</li>
        </ul>

        <ul class="material_top">
          <li>商品 TOP</li>
          <li>御马房脚垫</li>
          <li>23件</li>
          <li>2,786.00</li>
        </ul>

        <ul class="service_top">
          <li>服务 TOP</li>
          <li>普通洗车</li>
          <li>488件</li>
          <li>1,786.00</li>
        </ul>

        <ul class="package_top">
          <li>套餐 TOP</li>
          <li>养车无忧套餐</li>
          <li>28件</li>
          <li>1,786.00</li>
        </ul>
      </div>

      <div class="line_chart">
        <div id="linchart" class="linechart" style="height:300px;"></div>
      </div>
    </div>

  </div>

</div>

<% content_for :javascripts do %>
  <script>
    jQuery(function($){
      bar_chart_section();
      pie_char_section();
      line_char_section();
    });
  </script>
<% end %>

