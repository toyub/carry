<table cellspacing="0" cellpadding="0" class="on_site_top">
		<tbody>
		  <tr>
        <td class="border-bottom-none">正在排队车辆</td>
			  <td class="border-bottom-none">正在施工车辆</td>
        <td class="border-bottom-none">暂停施工车辆</td>
        <td class="border-bottom-none">施工完成车辆</td>
				<td>
					<label class="width-70">技师人数</label>
					<label class="width-80 text-align-center"><%= @mechanics_count %></label>
				</td>
				<td>
					<label class="width-70">技师忙碌</label>
					<label class="width-80 text-align-center"><%= @worker_counts[:busy] %></label>
				</td>
				<td>
					<label class="width-70">工位总数</label>
					<label class="width-80 text-align-center"><%= @workstations.count %></label>
				</td>
				<td>
					<label class="width-70">工位使用</label>
					<label class="width-80 text-align-center"><%= @workstations.busy.count %></label>
				</td>
				<td class="border-bottom-none">今天施工总台次</td>
			</tr>
			<tr >
        <td class="font-18 text-align-center"><%= @order_counts[:queuing] %><label class="margin-left-5 font-18">台</label></td>
			  <td class="font-18 text-align-center"><%= @order_counts[:processing] %><label class="margin-left-5 font-18">台</label></td>
				<td class="font-18 text-align-center"><%= @order_counts[:pausing] %><label class="margin-left-5 font-18">台</label></td>
				<td class="font-18 text-align-center"><%= @order_counts[:task_finished] %><label class="margin-left-5 font-18">台</label></td>
				<td>
					<label class="width-70">技师到岗</label>
					<label class="width-80 text-align-center"><%= @worker_counts[:ready] + @worker_counts[:busy] %></label>
				</td>
				<td>
					<label class="width-70">技师空闲</label>
					<label class="width-80 text-align-center"><%= @worker_counts[:ready] %></label>
				</td>
				<td>
					<label class="width-70">工位正常</label>
					<label class="width-80 text-align-center"><%= @workstations.available.count %></label>
				</td>
				<td>
					<label class="width-70">已离场车辆</label>
					<label class="width-80 text-align-center"><%= @order_counts[:finished] %></label>
				</td>
				<td class="font-18 text-align-center"><%= @order_counts[:total] %><label class="margin-left-5 font-18">台</label></td>
			</tr>

		</tbody>
	</table>
