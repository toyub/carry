<div class="pure-u-1-2 float-left">
  <div class="item_content">
    <%= form.label :name, '服务名称', class: 'width-75' %>
    <%= form.text_field :name, class: 'width-165' %>
  </div>
  <div class="item_content">
    <%= form.label :retail_price, '销售价', class: 'width-75' %>
    <%= form.text_field :retail_price, class: 'width-165' %>
  </div>
  <div class="item_content">
    <%= form.radio_button :favorable, false, checked: false, class: 'toggleable margin-left-15' %>
    <%= form.label :bargain_price, '优惠价', class: 'width-40' %>
    <%= form.text_field :bargain_price, class: 'width-165', disabled: true %>
  </div>
  <div class="item_content">
    <%= form.label :point, '服务积分', class: 'width-75' %>
    <%= form.text_field :point, class: 'width-165' %>
  </div>
  <div class="item_content">
    <%= form.label :code, '服务代码', class: 'width-75' %>
    <%= form.text_field :code, class: 'width-165' %>
  </div>
  <div class="item_content">
    <%= form.label :store_service_category_id, '服务类别', class: 'width-75' %>
    <%= form.hidden_field :store_service_category_id %>
    <span class="width-157 as_select onhide">请选择</span>
    <div class="select width-165" style="display: none;">
      <ol class="width-165">
        <li data-value="1">美容</li>
        <li data-value="2">镀晶</li>
        <li data-value="3">打蜡</li>
        <li data-value="4">钣金</li>
        <li data-value="4">喷漆</li>
      </ol>
      <a class="add_btn width-158" href="javascript:void(0);">新增</a>
    </div>
  </div>
  <div class="item_textarea ">
    <%= form.label :introduction, '服务介绍', class: 'width-75' %>
    <%= form.text_area :introduction, class: 'server_textarea width-432' %>
  </div>
  <div class="item_textarea ">
    <%= form.label :remark, '备注', class: 'width-75' %>
    <%= form.text_area :remark, class: 'height-120 text-indent-5 width-432' %>
  </div>
</div>
