<div class="reset">
  <header class="login_header">
    <span class="chinese">重设密码</span>
  </header>

  <main class="main">
    <div class="step">
      <a href="javascript:void(0)" class="active">1.输入验证码</a>
      <a href="javascript:void(0)">2.设置新密码</a>
      <a href="javascript:void(0)">3.设置成功</a>
    </div>

    <div class="management">
      <%= form_tag passwords_path, method: 'post' do %>
      <form action="/mis/reset_password/reset.html" method="get" >
        <ul class="account_info">
          <li><label>手机号码:</label><input id='mobile' pattern=".{11,11}" required="true" title="请输入正确的手机号!" type="text">
            <span class="verification_code">
              <i class="ico ico-three-arrows"></i>
              <%= link_to '获取验证码', 'javascript:void(0)', class: 'get_verification_code' %>
            </span>
          </li>
          <li><label>输入验证码:</label><input type="text"></li>
          <li><button class="next">下一步</button></li>
        </ul>
     <% end %>
    </div>
  </main>

</div>

<script type="text/javascript">
  $('a.get_verification_code').click(function(){
    var mobile = $("input#mobile").val();
    $.post("/passwords/send_validate_code",{ mobile: mobile },function(data){

    })
  })
</script>
