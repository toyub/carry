
<div class="reset">
  <header class="login_header">
    <span class="chinese">重设密码</span>
  </header>

  <main class="main">
    <div class="step">
      <a href="javascript:void(0)">1.输入验证码</a>
      <a href="javascript:void(0)"  class="active">2.设置新密码</a>
      <a href="javascript:void(0)">3.设置成功</a>
    </div>

    <div class="management">
      <%= form_for @store_staff, url: password_path, method: :put do |f| %>
        <%= f.hidden_field :id, value: @store_staff.id %>
        <input type="hidden" name="captcha_token" value="<%= params[:token] %>">
        <ul class="account_info">
          <li> <%= f.label "新密码:" %> <%= f.password_field :password, required: 'required' %>  </li>
          <li> <%= f.label "确认密码:" %> <%= f.password_field :password_confirmation, required: 'required' %>  </li>
          <li>
            <p class="error_tip" > <%= notice %> </p>
            <%= f.submit '确定', class: 'determine'  %>
          </li>
        </ul>
      <% end %>

    </div>
  </main>

</div>
