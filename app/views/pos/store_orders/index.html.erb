<div class="main_top">
	<h2>业务开单</h2>
</div>

<div class="details vue-store-order-index">
	<div class="search_nav">
		<div class="item-query">
			<label>查找车辆</label>
			<input type="text" class="width-180 js-store-vehicle-license-number" placeholder="输入车牌">
		</div>
		<div class="item-query">
			<label>日期</label>
			<input type="text" class="width-160 datetimepicker js-store-order-date">
		</div>
		<div class="item-query">
			<label>状态</label>
      <select type="text" class="width-140 state-select">
        <option value="">全部订单</option>
        <option value="0">草稿订单</option>
        <option value="1">正在排队订单</option>
        <option value="2">正在施工订单</option>
        <option value="3">等待付款订单</option>
        <option value="4">已完成订单</option>
			</select>
		</div>
		<div class="item-query">
			<a href="#" class="query_btn btn" v-on:click="searchStoreOrder">查&nbsp;询</a>
		</div>
		<div class="query_div page_card">
			<a href="/pos/store_orders/new" class="">开单</a>
			<a href="javascript:void(0)" class="active">列表</a>
		</div>
	</div>

	<div class="billing_records">
	  <table cellpadding="0" cellspacing="0" class='billing_record_list'>
      <thead>
			  <tr>
				  <th>#</th>
					<th>时间</th>
					<th>车牌号</th>
					<th>客户姓名</th>
					<th>手机号</th>
					<th>单号</th>
					<th>内容</th>
					<th>金额</th>
					<th>状态</th>
					<th>备注</th>
					<th>操作</th>
				</tr>
			</thead>
			<tbody>
			  <tr v-for="order in storeOrders">
          <td class="number">{{$index + 1 }}</td>
          <td>{{ order.attributes.created_at }}</td>
          <td>{{ order.attributes.store_vehicle.license_number }}</td>
          <td>{{ order.attributes.store_customer.full_name }}</td>
          <td>{{ order.attributes.store_customer.phone_number }}</td>
          <td>{{ order.attributes.numero }}</td>
          <td>{{ order.attributes.items_content}}</td>
          <td>{{ order.attributes.amount }}</td>
          <td>{{ order.attributes.state }}</td>
          <td>{{ order.attributes.remark }}</td>
          <td><a href="/pos/store_orders/{{order.id}}/edit">详情</a></td>
				</tr>
			</tbody>
		</table>
	</div>
</div>
