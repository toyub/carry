<div class="main_top">
	<h2>业务开单</h2>
</div>

<div class="details">
	<div class="search_nav">
		<div class="item-query">
			<label>查找车辆</label>
			<input type="text" class="width-180" placeholder="输入车牌">
		</div>
		<div class="item-query">
			<label>日期</label>
			<input type="text" class="width-160 datetimepicker">
		</div>
		<div class="item-query">
			<label>状态</label>
			<select type="text" class="width-140">
				<option>全部</option>
				<option>全部订单</option>
				<option>正在排队订单</option>
				<option>正在施工订单</option>
				<option>等待付款订单</option>
				<option>已完成订单</option>
			</select>
		</div>
		<div class="item-query">
			<a href="#" class="query_btn btn">查&nbsp;询</a>
		</div>
		<div class="query_div page_card">
			<a href="/pos/store_orders/new" class="">开单</a>
			<a href="javascript:void(0)" class="active">列表</a>
		</div>
	</div>

	<div class="billing_records">
	  <table cellpadding="0" cellspacing="0" class='billing_record_list'>
      <thead>
			  <tr>
				  <th>#</th>
					<th>时间</th>
					<th>车牌号</th>
					<th>客户姓名</th>
					<th>手机号</th>
					<th>单号</th>
					<th>内容</th>
					<th>金额</th>
					<th>状态</th>
					<th>备注</th>
					<th>操作</th>
				</tr>
			</thead>
			<tbody>
        <% @orders.each_with_index do |order, idx| %>
			  <tr>
				  <td class="number"><%= idx + 1 %></td>
					<td><%= order.created_at.to_s(:date_with_short_time) %></td>
					<td><%= order.store_vehicle.license_number %></td>
					<td><%= order.store_customer.try(:full_name) %></td>
					<td><%= order.store_customer.try(:phone_number) %></td>
					<td><%= order.numero %></td>
          <% if order.items.present? %>
					  <td>包含 <%= order.items.first.orderable.name %> 等 <%= order.items.count %> 个项目 </td>
          <% else %>
					  <td>包含0个项目 </td>
          <% end %>
					<td><%= order.amount %></td>
					<td><%= order.state %></td>
					<td><%= order.remark %></td>
					<td><a href="/pos/store_orders/<%= order.id %>/edit">详情</a></td>
				</tr>
        <% end %>
			</tbody>
		</table>
	</div>
</div>
