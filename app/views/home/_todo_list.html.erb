<div class="panel planning-tools">
  <div class="title">
    <h3>记事工具</h3>
  </div>
  <div class="planning-content">
    <span></span>
    <div class="planning-input">
      <input type="text" name="name" id="new-todo" value="" placeholder="有什么需要记下的吗？">
    </div>
    <ul class="planning-list">
     <% @todos.each do |todo| %>
      <li class="item">
        <span class="choose-icon">
          <label class="fa fa-check-circle check" for="check"></label>
          <input type="checkbox" value="<%= todo.id%>" id="check">
        </span>

        <div class="item-content">
          <span><%= todo.content  %> </span>
          <i class="lnr lnr-chevron-down"></i>
        </div>
      </li>
     <% end %>
    </ul>
  </div>
</div>
