<div class="row">
  <div class="col-left">
    <div class="panel data-statistics">
      <div class="title">
        <h3>数据统计</h3>
        <ul class="nav-tabs">
          <li class="active"><a href="#"><i class="fa fa-line-chart"></i>实时数据</a></li>
          <li><a href="#"><i class="fa fa-sun-o"></i>昨天数据</a></li>
        </ul>
      </div>

      <div class="panel-body">
        <div class="info-box">
          <div class="vehicle-info-wrap">
            <%= render 'vehicle_info' %>
          </div>
          <div class="tips-info-wrap">
            <%= render 'staffer' %>
          </div>
        </div>

        <div class="amount">
          <div class="title">
            <h3>营业金额</h3>
          </div>
          <dl class="item">
            <dd>营业额</dd>
            <dd class="number"><%= @orders.finished.sum(:amount)%></dd>
          </dl>
          <dl class="item">
            <dd>挂账</dd>
            <dd class="number"><%= @orders.hanging.sum(:amount)%></dd>
          </dl>
          <dl class="item">
            <dd>卡扣</dd>
            <dd class="number"><%= @order_items.from_asset.sum(:amount)%></dd>
          </dl>
        </div>
      </div>
    </div>
    <div class="panel work">
      <div class="title">
        <h3>我的工作</h3>
        <a href="#" class="add"><i class="fa fa-plus"></i></a>
      </div>

      <div class="panel-body">
        <%= render 'my_work' %>
      </div>
    </div>
  </div>

  <div class="col-center">
    <div class="panel calendar">

    </div>

    <div class="panel message-list">
      <%= render 'message_list' %>
    </div>
  </div>

  <div class="col-right">
    <%= render 'todo_list' %>
  </div>

</div>

<script type="text/javascript">
  $(function(){
    $("#new-todo").keyup(function(event){
       if(event.keyCode == 13){
         var pushContent = $("#new-todo").val();
         if(pushContent != ""){
           $.ajax({
             url: "/api/home/staff_todos",
             type: "Post",
             data: {content: pushContent },
             success: function(data){
               $("#new-todo").val("");
               var html = ""
                   html += "<li class='item'>"
                   html += "<span class='choose-icon'>"
                   html += "<label class='fa fa-check-circle check' for='check'></label>"
                   html += "<input type='checkbox' value="
                   html += data.todo.id
                   html += " id='check'>"
                   html += "</span><div class='item-content'>"
                   html += "<span>"
                   html += data.todo.content
                   html += "</span><i class='lnr lnr-chevron-down'></i>"
                   html += "</div></li>"
              $("ul.js-planning-list").append(html);
             },
             error: function(response){
               ZhanchuangAlert(response.responseJSON.msg);
             }
           });
         }else {
           ZhanchuangAlert("请输入有效的内容!");
         };
       }
      });

      // $(document).on('click','a#done-todos', function(){
      //   $.ajax({
      //     url:
      //   });
      });

  });
</script>
