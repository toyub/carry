<ul class="work-menu js-work-menu">
  <% @works.each do |root_category|%>
    <% root_category[:sub_categories].each do |work| %>
      <% if current_user.works.include?(work[:idx].to_s) %>
        <li class="item">
          <a href="<%= work[:url]%>">
            <div class="item-icon">
              <i class="fa fa-cubes"></i>
            </div>
            <span class="item-menu"><%= work[:name]%></span>
          </a>
        </li>
      <% end %>
    <% end %>
  <% end %>
</ul>
